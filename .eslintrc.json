{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["error", 4],
    "no-trailing-spaces": "error",
    "eol-last": "error",
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "space-before-blocks": "error",
    "keyword-spacing": "error",
    "no-multiple-empty-lines": ["error", { "max": 2 }],
    "prefer-const": "error",
    "no-var": "error"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "fetch": "readonly",
    "console": "readonly",
    "alert": "readonly",
    "showDetailedBiography": "readonly",
    "filterProjects": "readonly",
    "toggleTagFilter": "readonly",
    "viewProject": "readonly",
    "searchProjects": "readonly",
    "filterConferences": "readonly",
    "filterByTopic": "readonly",
    "searchConferences": "readonly",
    "filterCourses": "readonly",
    "toggleCategoryFilter": "readonly",
    "searchCourses": "readonly",
    "changeImage": "readonly",
    "goToImage": "readonly"
  }
}